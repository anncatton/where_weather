<% if query_observation.nil? %>

	<div class="container">

		<% if query_station.nil? %>

 			<h2 id="intro">Ever wonder where else in the world has <strong>your</strong> weather?</h2>
			<%= erb :_search_bar, locals: { input_value: "" } %>

		<% else %>

			<%= erb :_search_bar, locals: { input_value: "" } %>
			<h2 class="no-result">There is not enough data to find matches for <%= query_station.city %>,
				<%= query_station.country %>
			</h2>

		<% end %>
	</div>

<% end %>
