<% if matching_location.station.country == "Canada" || matching_location.station.country == "United States" %>
	<div class="condition clearfix">
		<div class="condition-value"><%= matching_location.station.city %>, <%= matching_location.station.region %>, <%= matching_location.station.country %></div>
	</div>
<% else %>
	<div class="condition clearfix">
		<div class="condition-value"><%= matching_location.station.city %>, <%= matching_location.station.country %></div>
	</div>
<% end %>
<div class="condition clearfix">
		<div class="condition-value"><%= sorted_scores_hash[matching_location] %> % </div>
</div>